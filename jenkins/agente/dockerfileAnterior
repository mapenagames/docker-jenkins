FROM ubuntu:22.04

LABEL maintainer="tu_nombre@tu_empresa.com"
LABEL description="Agente Jenkins SSH basado en Ubuntu 22.04"

# Evitar preguntas interactivas durante la instalación
ENV DEBIAN_FRONTEND=noninteractive

# Instalar SSH server y utilidades básicas
RUN apt-get update && apt-get install -y \
    openssh-server \
    python3 \
    python3-pip \
    docker.io \
    nodejs \
    npm \
    git \
    curl \
    sudo \
    openjdk-17-jdk \
    && apt-get clean

# Crear usuario jenkins
RUN useradd -m -s /bin/bash jenkins && \
    echo "jenkins ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers && \
    mkdir -p /home/jenkins/.ssh /var/run/sshd && \
    chmod 700 /home/jenkins/.ssh

# Variable para la clave pública SSH del master
ARG JENKINS_AGENT_SSH_PUBKEY
RUN echo "${JENKINS_AGENT_SSH_PUBKEY}" > /home/jenkins/.ssh/authorized_keys && \
    chmod 600 /home/jenkins/.ssh/authorized_keys && \
    chown -R jenkins:jenkins /home/jenkins/.ssh

USER jenkins
WORKDIR /home/jenkins
# Exponer puerto SSH
EXPOSE 22

# Mantener SSH en ejecución
CMD ["/usr/sbin/sshd", "-D"]

